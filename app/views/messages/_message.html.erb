<div class="message-<%= message.user.id %> chat-message" id="message-<%= message.id %>">
  <small class="chatroom-user-info">
    <div class="chatroom-avatar">
      <% if message.user.avatar.key  %>
        <%= cl_image_tag message.user.avatar.key %>
      <% end %>
    </div>
    <div>
      <strong><%= message.user.username %></strong>
      <i><%= message.created_at.strftime("%b %e at %l:%M %p") %></i>
    </div>
  </small>
  <p><%= message.content %></p>
</div>
