<div data-search-matches-target="list">
  <p class="match-subheader">
    <% if params[:query].blank? %>
      <%= pluralize matches.count, "match" %> available
    <% else %>
      <%= pluralize matches.count, "result" %> for <code><%= params[:query] %></code>
    <% end %>
  </p>
  <div class= "matches">
    <% @matches.each do |match| %>
    <a href="<%= match_events_path(match) %>">
      <div class="match-row">
        <div class="match-card">
          <div class="match-info">
            <div class="match-name-card"><%= match.team_one.upcase %> VS <%= match.team_two.upcase %></div>
            <div class="match-time-card"><%= match.match_time %></div>
          </div>
        </div>
        <div class="match-triangle"></div>
      </div>
    </a>
    <% end %>
  </div>
</div>
